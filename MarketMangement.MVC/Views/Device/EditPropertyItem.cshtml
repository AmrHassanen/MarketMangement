@model MarketMangement.Service.DTOs.PropertyItemDto

@{
    ViewData["Title"] = "Edit Property Item";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="EditPropertyItem" method="post">
    <div class="form-group">
        <label asp-for="Name" class="control-label">Property Name</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <input type="hidden" asp-for="DeviceId" />
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Save Changes</button>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
